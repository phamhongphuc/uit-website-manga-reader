{
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.nuxt": true,
        "**/.sonarlint": true,
        "**/.nyc_output": true,
        "**/.svn": true,
        "**/.vscode": true,
        "**/dist": true,
        "**/node_modules": true,
        "realm-object-server": true,
        "build": true,
        "coverage": true,
        "database": true
    },
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        {
            "language": "html",
            "autoFix": true
        },
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "files.eol": "\r\n"
}
