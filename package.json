{
    "name": "uit.open.source.project",
    "version": "1.0.0",
    "description": "Nuxt.js project",
    "author": "Lê Thị Thảo Trâm <sawa.kisei@gmail.com>",
    "private": true,
    "scripts": {
        "precommit": "yarn lint",
        "heroku-postbuild": "yarn build",
        "dev": "run-p dev:*",
        "dev:server": "cross-env NODE_ENV=development nodemon server/api/index --exec babel-node",
        "dev:client": "cross-env NODE_ENV=development nuxt",
        "build": "nuxt build",
        "start": "nuxt start",
        "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
        "lint:fix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
        "prettier:fix": "prettier --write api/** components/** layouts/** pages/** plugins/** !**/node_modules/** !./node_modules/**",
        "type:fix": "run-s lint:fix prettier:fix"
    },
    "nodemonConfig": {
        "watch": [
            "server"
        ]
    },
    "engines": {
        "node": "8.11.2"
    },
    "dependencies": {
        "@koa/cors": "^2.2.2",
        "axios": "^0.18.0",
        "bluebird": "^3.5.3",
        "bootstrap-vue": "^2.0.0-rc.11",
        "koa": "^2.6.1",
        "koa-bodyparser": "^4.2.1",
        "koa-multer": "^1.0.2",
        "koa-router": "^7.4.0",
        "koa-session": "^5.10.0",
        "moment": "^2.22.2",
        "nuxt": "^2.2.0",
        "nuxt-sass-resources-loader": "^2.0.5",
        "realm": "^2.18.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.1.5",
        "@babel/core": "^7.1.5",
        "@babel/node": "^7.0.0",
        "@babel/plugin-proposal-class-properties": "^7.1.0",
        "@babel/plugin-proposal-decorators": "^7.1.2",
        "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
        "@babel/plugin-proposal-function-sent": "^7.1.0",
        "@babel/plugin-proposal-json-strings": "^7.0.0",
        "@babel/plugin-proposal-numeric-separator": "^7.0.0",
        "@babel/plugin-proposal-throw-expressions": "^7.0.0",
        "@babel/plugin-syntax-dynamic-import": "^7.0.0",
        "@babel/plugin-syntax-import-meta": "^7.0.0",
        "@babel/plugin-syntax-jsx": "^7.0.0",
        "@types/node": "^10.12.2",
        "babel-eslint": "^10.0.1",
        "babel-plugin-root-import": "^6.1.0",
        "cross-env": "^5.2.0",
        "eslint": "^5.8.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
        "eslint-loader": "^2.1.1",
        "eslint-plugin-html": "^4.0.6",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-node": "^8.0.0",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0",
        "eslint-plugin-vue": "^4.7.1",
        "node-sass": "^4.10.0",
        "nodemon": "^1.18.6",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.15.1",
        "sass-loader": "^7.1.0"
    }
}
